# FAM Project Environment Configuration Template
# Copy this file to .env and update the values for your environment
# DO NOT commit your actual .env file to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database settings
POSTGRES_DB=fam_db
POSTGRES_USER=fam_user
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# PGADMIN CONFIGURATION
# =============================================================================
# PgAdmin web interface for database management
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=changeme_admin_password
PGADMIN_PORT=8080

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment mode (development, production, test)
NODE_ENV=development

# API Server Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Frontend Configuration
FRONTEND_PORT=3001
FRONTEND_HOST=0.0.0.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret - Use a strong, random string in production
# Generate with: openssl rand -base64 32
JWT_SECRET=changeme_jwt_secret_min_32_chars

# Session Secret - Use a strong, random string in production
# Generate with: openssl rand -base64 32
SESSION_SECRET=changeme_session_secret_min_32_chars

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Frontend URL for CORS (Cross-Origin Resource Sharing)
CORS_ORIGIN=http://localhost:3001

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# ADDITIONAL CONFIGURATION (Optional)
# =============================================================================
# Uncomment and configure as needed

# Database connection pool settings
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# Rate limiting (requests per minute)
# RATE_LIMIT=100

# File upload settings
# MAX_FILE_SIZE=10MB
# UPLOAD_DIR=./uploads

# Email configuration (for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@example.com
# SMTP_PASSWORD=changeme_smtp_password
# SMTP_FROM=FAM App <noreply@example.com>

# External API keys (if needed)
# GOOGLE_MAPS_API_KEY=changeme_google_maps_key
# STRIPE_SECRET_KEY=changeme_stripe_secret
# STRIPE_PUBLISHABLE_KEY=changeme_stripe_publishable

# Monitoring and analytics
# SENTRY_DSN=changeme_sentry_dsn
# GOOGLE_ANALYTICS_ID=changeme_ga_id